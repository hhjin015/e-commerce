### 상품의 옵션이 없는 경우
POST http://localhost:8080/products HTTP/1.1
Content-Type: application/json

{
  "product": {
    "name": "양말",
    "description": "양말 사세요",
    "price": 1000,
    "optionUsable": false,
    "options": null
  },
  "productItems": [
    {
      "quantity": 10,
      "optionCombinations": null
    }
  ]
}

### 상품의 옵션이 있는 경우
POST http://localhost:8080/products HTTP/1.1
Content-Type: application/json

{
  "product": {
    "name": "양말",
    "description": "양말 사세요",
    "price": 1000,
    "optionUsable": true,
    "options": [
      {
        "name": "사이즈",
        "values": [
          "S",
          "M",
          "L"
        ]
      }
    ]
  },
  "productItems": [
    {
      "quantity": 100,
      "optionCombination": {
        "optionNames": [
          "S"
        ],
        "additionalPrice": 0,
        "optionCombQuantity": 10
      }
    },
    {
      "quantity": 20,
      "optionCombination": {
        "optionNames": [
          "M"
        ],
        "additionalPrice": 1000,
        "optionCombQuantity": 10
      }
    },
    {
      "quantity": 30,
      "optionCombination": {
        "optionNames": [
          "L"
        ],
        "additionalPrice": 2000,
        "optionCombQuantity": 10
      }
    }
  ]
}



